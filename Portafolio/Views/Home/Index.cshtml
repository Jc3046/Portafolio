@model persona

@{
    ViewData["Title"] = "Pagina Principal";
    string convertirEnMayuscula(string valor)
    {
        return valor.ToUpper() + "zzz";
    }

    DateTime hoy = DateTime.Now;
    var nombres = new List<string>() { "Jean Carlo", "Alyson", "Roberto" };
}

<div class="text-center">

    <ul>
        @foreach (var nombre in nombres)
        {
            <li>@nombre</li>
        }
    </ul>

    <h1 class="display-4">Soy @convertirEnMayuscula(Model.Nombre) (@Model.Edad)</h1>
    <h4>@hoy.ToString("dd/MM/yyyy hh:mm:ss tt")</h4>

    @if (Model.Edad >= 18)
    {
        <h4>Eres mayor de edad! Puedes pasar <button>Entrar</button></h4>
    }
    else
    {
        <h4>Eres menor! Largate</h4>
    }

    <h2>Soy un desarrollador full stack especializado en tecnologia .NET y JavaScript.</h2>

    <img id="foto"
         src="~/imagenes/Foto.jpg" alt="Foto de obama" />
</div>
